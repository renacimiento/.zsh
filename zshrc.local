# Aliases
alias clang='clang -Wall -Wextra -Wpedantic'
alias diff='vimdiff -f -R'
alias gcc='gcc -Wall -Wextra -Wpedantic'
alias grep='grep --color=always'

# History
HISTSIZE=65536
SAVEHIST=131072

# Less
export LESS='-Ri'

# Prompt
prompt clint

# Assume xterm supports 256 colors
[[ -n "$DISPLAY" && "$TERM" == "xterm" ]] && export TERM=xterm-256color

# Disable START/STOP output control, to free up C-s for forward history search
stty -ixon
